.wrapper
    @extends .fullwidth-wrapper


//////////
// page //
//////////

.page-heading
    margin: var(--unit) 0

.page-title
    font-family: heading-font

.page-footer
    border-top: 1px solid var(--dark)
    margin-top: var(--two-units)
    padding: var(--semi-unit) 0
    font-size: var(--s)


